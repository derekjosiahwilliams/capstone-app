<div class="container">
<h1 style="color: white;">Login</h1>
<%= form_tag "/login", method: :post do %>
  <div style="color: white;" class="form-group">
    Email: <input type="email" style="color: white;" class="form-control" name="email">
  </div>
  <div style="color: white;" class="form-group">
    Password: <input type="password" class="form-control" name="password">
  </div>
  <input type="submit" style=" background-color: #9C27B0;" value="Log In" class="btn btn-default">
<% end %>
</div>